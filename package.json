{
  "name": "ng-libs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "jest --coverage",
    "test:app": "jest ./src/** --coverage",
    "test:projects": "jest ./projects/** --coverage",
    "test:autocomplete": "jest ./projects/autocomplete --coverage",
    "test:form-stepper": "jest ./projects/form-stepper --coverage",
    "test:history": "jest ./projects/history --coverage",
    "test:if-non-nullish": "jest ./projects/if-non-nullish --coverage",
    "test:timeline": "jest ./projects/timeline --coverage",
    "test:rx-data-store": "jest ./projects/rx-data-store --coverage",
    "test:scaffolding": "jest ./projects/scaffolding --coverage",
    "build": "ng build",
    "build:all": "npm run build && npm run build:autocomplete && npm run build:form-stepper && npm run build:history && npm run build:if-non-nullish && npm run build:timeline && npm run build:rx-data-store",
    "build:autocomplete": "ng build autocomplete",
    "postbuild:autocomplete": "sass ./projects/autocomplete/src/lib/scss/autocomplete.scss ./dist/autocomplete/autocomplete.css --style compressed",
    "build:form-stepper": "ng build form-stepper",
    "postbuild:form-stepper": "sass ./projects/form-stepper/src/lib/scss/form-stepper.scss ./dist/form-stepper/form-stepper.css --style compressed",
    "build:history": "ng build history",
    "build:if-non-nullish": "ng build if-non-nullish",
    "build:timeline": "ng build timeline",
    "build:rx-data-store": "ng build rx-data-store",
    "build:scaffolding": "ng build scaffolding",
    "watch": "ng build --watch --configuration development",
    "docs": "ng build --base-href /ng-libs/ --output-path docs && cp ./docs/index.html ./docs/404.html",
    "lint": "ng lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^15.2.3",
    "@angular/cdk": "^15.2.3",
    "@angular/common": "^15.2.3",
    "@angular/compiler": "^15.2.3",
    "@angular/core": "^15.2.3",
    "@angular/forms": "^15.2.3",
    "@angular/material": "^15.2.3",
    "@angular/platform-browser": "^15.2.3",
    "@angular/platform-browser-dynamic": "^15.2.3",
    "@angular/router": "^15.2.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "~15.2.4",
    "@angular/compiler-cli": "^15.2.3",
    "@ngneat/spectator": "^14.0.0",
    "@types/jest": "^29.4.1",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.7.0",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.3",
    "ng-packagr": "^15.2.2",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "~4.9.4"
  }
}
