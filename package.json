{
  "name": "ng-libs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "jest",
    "test:app": "jest ./src/**",
    "test:projects": "jest ./projects/**",
    "build": "ng build",
    "build:if-non-nullish": "ng build if-non-nullish",
    "build:form-stepper": "ng build form-stepper",
    "postbuild:form-stepper": "sass ./projects/form-stepper/src/lib/scss/form-stepper.scss ./dist/form-stepper/form-stepper.css --style compressed",
    "watch": "ng build --watch --configuration development",
    "docs": "ng build --base-href /ng-libs/ --output-path docs && cp ./docs/index.html ./docs/404.html",
    "lint": "ng lint",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~13.2.2",
    "@angular/cdk": "^13.2.2",
    "@angular/common": "~13.2.2",
    "@angular/compiler": "~13.2.2",
    "@angular/core": "~13.2.2",
    "@angular/forms": "~13.2.2",
    "@angular/material": "^13.2.2",
    "@angular/platform-browser": "~13.2.2",
    "@angular/platform-browser-dynamic": "~13.2.2",
    "@angular/router": "~13.2.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular-eslint/builder": "14.0.0-alpha.3",
    "@angular-eslint/eslint-plugin": "14.0.0-alpha.3",
    "@angular-eslint/eslint-plugin-template": "14.0.0-alpha.3",
    "@angular-eslint/schematics": "14.0.0-alpha.3",
    "@angular-eslint/template-parser": "14.0.0-alpha.3",
    "@angular/cli": "~13.2.3",
    "@angular/compiler-cli": "~13.2.2",
    "@ngneat/spectator": "^10.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.1",
    "ng-packagr": "^13.2.1",
    "prettier": "2.5.1",
    "typescript": "~4.5.5"
  }
}
